
@model Slider
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Slider</h4>
                <div>
                    <img style="width:300px;height:180px;object-fit:cover" src="~/img/slider/@Model.Image"/>
                </div>

                <form method="post" enctype="multipart/form-data" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input asp-for="Photo">
                        <span asp-validation-for="Photo" class="alert-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="alert-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Subtitle"></label>
                        <input asp-for="Subtitle" class="form-control">
                        <span asp-validation-for="Subtitle" class="alert-danger"></span>


                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}



