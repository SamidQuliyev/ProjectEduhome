@model CreateVM
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update User</h4>

                <form method="post" class="forms-sample">
                    <div class="form-group">
                        <label asp-for="FullName"> </label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="alert-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Username"> </label>
                        <input asp-for="Username" class="form-control">
                        <span asp-validation-for="Username" class="alert-danger"></span>


                    </div>
                    <div class="form-group">
                        <label asp-for="Email"> </label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="alert-danger"></span>


                    </div>
                 
                    <div class="form-group">
                        <label asp-for="Password"> </label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="alert-danger"></span>


                    </div>
                    <div class="form-group">
                        <label asp-for="CheckPassword"> </label>
                        <input asp-for="CheckPassword" class="form-control">
                        <span asp-validation-for="CheckPassword" class="alert-danger"></span>


                    </div>

                    <div class="form-group">
                        <label>Select Role</label>
                        <select class="form-control" name="newRole">
                            @foreach (IdentityRole role in ViewBag.Roles)
                            {
                                if (ViewBag.Role == role.Name)
                                {
                                    <option selected value="@role.Name">@role.Name</option>
                                }
                                else
                                {
                                    <option value="@role.Name">@role.Name</option>
                                }

                            }

                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
